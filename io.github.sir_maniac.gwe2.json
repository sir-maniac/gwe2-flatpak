{
  "app-id": "io.github.sir_maniac.gwe2",
  "command": "gwe2",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--device=dri",
    "--share=network",
    "--talk-name=org.kde.StatusNotifierWatcher",
    "--talk-name=org.freedesktop.Flatpak",
    "--filesystem=xdg-documents"
  ],
  "cleanup": [
    "*.la",
    "*.a",
    "/include",
    "/lib/cmake",
    "/lib/pkgconfig",
    "/share/doc",
    "/share/gir-1.0",
    "/share/man",
    "/share/vala"
  ],
  "modules": [
    "shared-modules/libappindicator/libappindicator-gtk3-introspection-12.10.json",
    "pypi-dependencies.json",
    {
      "name": "gwe",
      "buildsystem": "meson",
      "config-opts": [
        "--buildtype=release"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/sir-maniac/GreenWithEnvy2.git",
          "disable-submodules": true
        }
      ]
    }
  ]
}
